{
    "manifestVersion": 1,
    "id": "azure-devops-tools",
    "name": "Fabrikam Champions Azure DevOps Tools",
    "version": "1.0.21",
    "publisher": "fabrikam-champions",
    "galleryFlags": [
        "Public"
    ],
    "tags": [
        "Kafka"
    ],    
    "repository": {
        "type": "git",
        "uri": "https://github.com/fabrikam-champions/azure-devops-tools"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for building/releasing with Azure DevOps. Includes build/release tasks.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "icon.png"        
    },
    "files": [        
        {
            "path": "kafkaproducertask"
        },       
        {
            "path": "node_modules",
            "packagePath":"kafkaproducertask/node_modules"
        },
        {
            "path": "kafkaconsumertask"
        }, 
        {
            "path": "node_modules",
            "packagePath":"kafkaconsumertask/node_modules"
        }
    ],
    "contributions": [
        {
            "id": "kafka-producer-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "kafkaproducertask"
            }
        },
        {
            "id": "kafka-consumer-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "kafkaconsumertask"
            }
        }
    ]
}